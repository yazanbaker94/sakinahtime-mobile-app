{
  "expo": {
    "name": "SakinahTime",
    "slug": "sakinahtime",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "sakinahtime",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sakinahtime.app",
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ],
        "NSPhotoLibraryUsageDescription": "SakinahTime needs access to your photo library to save generated Quran videos.",
        "NSPhotoLibraryAddUsageDescription": "SakinahTime needs permission to save generated Quran videos to your photo library."
      },
      "sounds": [
        "./assets/audio/azan.caf"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.sakinahtime.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE",
        "NOTIFICATIONS",
        "SCHEDULE_EXACT_ALARM",
        "USE_EXACT_ALARM",
        "WAKE_LOCK",
        "RECEIVE_BOOT_COMPLETED",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_VIDEO",
        "READ_MEDIA_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "sounds": [
            "./assets/audio/azan.mp3"
          ],
          "icon": "./assets/images/icon.png",
          "color": "#10B981"
        }
      ],
      "./plugins/withAndroidNotificationSound.js",
      "./plugins/withAndroidNativeFiles.js",
      "./plugins/withAndroidNativeModules.js",
      "./plugins/withAndroidWidgets.js",
      "./plugins/withAndroidManifest.js",
      "./plugins/withDhikrOverlay.js",
      "expo-media-library"
    ],
    "extra": {
      "eas": {
        "projectId": "354efe83-b2bd-4897-8c17-0403353249f5"
      }
    }
  }
}
